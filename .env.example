# Scan target absolute path
SCAN_PATH=/path/to/your/media/directory
# ex win SCAN_PATH=C:\Users\user\app\media

# Server port
PORT=3333
SERVER_HOST=127.0.0.1
INDEX_HTML_PATH=./index.html

# Python Environment Paths
PYTHON_VENV_PATH=./venv/bin/python
#win PYTHON_VENV_PATH=.venv\Scripts\python.exe

ANALYSIS_SCRIPTS_DIR=./analysis
PYTHON_CACHE_DIR=./analysis/__pycache__

# Analysis Scripts (relative to ANALYSIS_SCRIPTS_DIR)
IMAGE_INDEXER_SCRIPT=image_indexer.py
VIDEO_INDEXER_SCRIPT=video_indexer.py
AUDIO_INDEXER_SCRIPT=audio_indexer_v2.py
EMBEDDING_SCRIPT=get_embedding.py
RERANK_SCRIPT=rerank_results.py

# Processing Parameters
DEFAULT_RESIZE=1024
DEFAULT_QUALITY=85
DEFAULT_TIMEOUT=300

# Scan settings
MAX_DEPTH=5
EXCLUDE_DIRS=node_modules,.git,.next,dist,build,.cache

# LM Studio Configuration
LMSTUDIO_URL=http://127.0.0.1:1234
LMSTUDIO_MODEL=qwen2.5-vl-7b
LMSTUDIO_IMAGE_MODE=data

# Meilisearch Configuration
# UI http://127.0.0.1:24900/
MEILI_URL=http://127.0.0.1:17700
MEILI_MASTER_KEY=masterKey
MEILI_INDEX=media

# Qdrant Configuration
QDRANT_URL=http://127.0.0.1:26333
QDRANT_COLLECTION=media_vectors

# Embedding model (default uses Plamo; override as needed)
EMB_MODEL=pfnet/plamo-embedding-1b

# Whisper model (speed/accuracy trade-off)
WHISPER_MODEL=small

# Whisper partial transcription (speed-up for long audios)
# e.g., 60 (only first 60s), with optional offset
WHISPER_MAX_SECONDS=60
WHISPER_OFFSET_SECONDS=0

# Audio analysis settings
# - AUDIO_TIMEOUT_MS: Node-side audio analysis timeout (ms)
# - DISABLE_PANNS: set 1 to disable PANNs (AudioSet tagging). Default uses PANNs
# - NO_WHISPER: set 1 to disable Whisper transcription
# - NO_HF_DOWNLOAD: set 1 to forbid new model downloads (cache-only)
AUDIO_TIMEOUT_MS=480000
DISABLE_PANNS=0
NO_WHISPER=0
NO_HF_DOWNLOAD=0

# Progress logs
# - AUDIO_PROGRESS: emit stage logs for audio analysis
# - WHISPER_VERBOSE: emit Whisper per-segment logs
AUDIO_PROGRESS=1
WHISPER_VERBOSE=0
WHISPER_PROGRESS_INTERVAL=2
WHISPER_RTF=
FEATURES_RTF=0.25
FEATURES_PROGRESS_INTERVAL=2
WHISPER_LANGUAGE=
WHISPER_TASK=transcribe

# ID scheme (media IDs in Meilisearch/Qdrant)
ID_SCHEME=rel8
